    <style>
        .wrapper {
    text-align: center;
    }
    .button1 {
        position: absolute;
        top: 50%;
    }
    .imageP {
        position: absolute;
        left: 30%;
    }
    </style>
    <div id="divTripByIdTemplate">
        <h2>Smart Bike</h2>
        <div id="divTripButton" class="wrapper">
        <div>
            <div class="form-group">
                <button id="btnBack" type="button" class="button1 btn btn-primary">Back</button>
            </div>
            <br>
        </div>
         </div>
         </br>
         <span>Trip: {{datetime}}</span>
         <div id="divCurrentTripDetails">
             <h5>Average Speed:</h5>
             <span>{{avg_speed}} km/h</span>
             <br>
             <h5>Average Heart Rate:</h5>
             <span>{{avg_heart_rate}} BPM</span>
             <br>
             <h5>Maximum Speed:</h5>
             <span>{{max_speed}} km/h</span>
             <br>
             <h5>Maximum Heart Rate:</h5>
             <span>{{max_heart_rate}} BPM</span>
             <br>
             <h5>Minimum Heart Rate:</h5>
             <span>{{min_heart_rate}} BPM</span>
             <br>
             <div id="divPlots" class="wrapper imageP">
                 <div id="divSpeedPlot">
                     <img class="media-object img-fluid img-thumbnail" src={{speed_plot}} width="200" height="300">
                 </div>
                 <div id="divHeartRatePlot">
                     <img class="media-object img-fluid img-thumbnail" src={{heart_rate_plot}} width="200" height="300">
                 </div>
                 <div id="divMap">
                     <embed type="text/html" src={{map}} width="200" height="300">
                 </div>
             </div>
         </div>
    </div>